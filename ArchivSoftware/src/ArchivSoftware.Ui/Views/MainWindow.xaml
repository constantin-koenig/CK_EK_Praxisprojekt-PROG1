<Window x:Class="ArchivSoftware.Ui.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ArchivSoftware.Ui.ViewModels"
        xmlns:conv="clr-namespace:ArchivSoftware.Ui.Converters"
        mc:Ignorable="d"
        Title="ArchivSoftware" 
        Height="600" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        d:DataContext="{d:DesignInstance Type=vm:MainViewModel}">
    
    <Window.Resources>
        <conv:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <conv:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
        <conv:PlaceholderVisibilityConverter x:Key="PlaceholderVisibilityConverter"/>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Toolbar -->
        <ToolBar Grid.Row="0" Margin="5">
            <Button Content="Neuer Ordner" Command="{Binding CreateFolderCommand}" Padding="10,5"/>
            <Button Content="Dokument importieren" Command="{Binding AddDocumentCommand}" Padding="10,5"/>
            <Separator/>
            <Button Content="Aktualisieren" Command="{Binding RefreshCommand}" Padding="10,5"/>
            <Separator/>
            <Button Content="ðŸ“‹ Import-Log" Click="ShowImportLog_Click" Padding="10,5"/>
            <Separator/>
            <!-- Suchfeld -->
            <TextBlock Text="Suche:" VerticalAlignment="Center" Margin="10,0,5,0"/>
            <TextBox Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}" 
                     Width="200" 
                     VerticalAlignment="Center"
                     Padding="5,3"
                     KeyDown="SearchTextBox_KeyDown"/>
            <Button Content="Suchen" Command="{Binding SearchCommand}" Padding="10,5" Margin="5,0,0,0"/>
        </ToolBar>
        
        <!-- Hauptbereich -->
        <Grid Grid.Row="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Ordner-Baum -->
            <GroupBox Header="Ordner" Grid.Column="0">
                <TreeView ItemsSource="{Binding Folders}"
                          SelectedItemChanged="TreeView_SelectedItemChanged">
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Icon}" Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding Name}"/>
                            </StackPanel>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                    <TreeView.ItemContainerStyle>
                        <Style TargetType="TreeViewItem">
                            <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                            <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
                        </Style>
                    </TreeView.ItemContainerStyle>
                </TreeView>
            </GroupBox>
            
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch"/>
            
            <!-- Dokumente-Bereich -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Dokumente/Suchergebnisse -->
                <GroupBox Grid.Row="0">
                    <GroupBox.Header>
                        <TextBlock>
                            <Run Text="Dokumente"/>
                            <Run Text=" - Suchergebnisse" Foreground="Blue" 
                                 x:Name="SearchResultsHeader"/>
                        </TextBlock>
                    </GroupBox.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Button zum HinzufÃ¼gen -->
                        <Button Content="Dokument hinzufÃ¼gen" 
                                Command="{Binding AddDocumentCommand}" 
                                HorizontalAlignment="Left"
                                Padding="10,5"
                                Margin="5"
                                Grid.Row="0"/>
                        
                        <!-- Dokumentenliste (wenn kein Suchbegriff) -->
                        <ListView ItemsSource="{Binding Documents}" 
                                  SelectedItem="{Binding SelectedDocument}"
                                  Grid.Row="1"
                                  Margin="5,0,5,5"
                                  x:Name="DocumentsListView">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Titel" Width="200" DisplayMemberBinding="{Binding Title}"/>
                                    <GridViewColumn Header="Dateiname" Width="180" DisplayMemberBinding="{Binding FileName}"/>
                                    <GridViewColumn Header="Erstellt" Width="140" DisplayMemberBinding="{Binding CreatedAt, StringFormat={}{0:dd.MM.yyyy HH:mm}}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                        
                        <!-- Suchergebnisliste -->
                        <ListView ItemsSource="{Binding SearchResults}" 
                                  SelectedItem="{Binding SelectedSearchResult}"
                                  Grid.Row="1"
                                  Margin="5,0,5,5"
                                  x:Name="SearchResultsListView"
                                  Visibility="{Binding SearchResults.Count, Converter={StaticResource CountToVisibilityConverter}, FallbackValue=Collapsed}">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Titel" Width="150" DisplayMemberBinding="{Binding Title}"/>
                                    <GridViewColumn Header="Dateiname" Width="120" DisplayMemberBinding="{Binding FileName}"/>
                                    <GridViewColumn Header="Ordner" Width="150" DisplayMemberBinding="{Binding FolderPath}"/>
                                    <GridViewColumn Header="Snippet" Width="250" DisplayMemberBinding="{Binding Snippet}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                        
                        <!-- Platzhalter wenn kein Ordner ausgewÃ¤hlt und keine Suche aktiv -->
                        <TextBlock Text="WÃ¤hlen Sie einen Ordner aus oder nutzen Sie die Suche" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"
                                   FontSize="14"
                                   Foreground="Gray"
                                   Grid.Row="1"
                                   IsHitTestVisible="False">
                            <TextBlock.Visibility>
                                <MultiBinding Converter="{StaticResource PlaceholderVisibilityConverter}">
                                    <Binding Path="SelectedFolder"/>
                                    <Binding Path="SearchResults.Count"/>
                                </MultiBinding>
                            </TextBlock.Visibility>
                        </TextBlock>
                    </Grid>
                </GroupBox>
                
                <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                
                <!-- Dokumentvorschau -->
                <GroupBox Grid.Row="2" Header="Inhalt des Dokuments">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                        <TextBlock x:Name="DocumentPreviewTextBlock"
                                   TextWrapping="Wrap"
                                   FontFamily="Consolas"
                                   FontSize="12"
                                   Padding="5"/>
                    </ScrollViewer>
                </GroupBox>
            </Grid>
        </Grid>
        
        <!-- Statusleiste -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
