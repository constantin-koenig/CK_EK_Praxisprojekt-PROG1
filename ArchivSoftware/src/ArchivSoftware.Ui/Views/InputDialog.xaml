<Window x:Class="ArchivSoftware.Ui.Views.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Eingabe" 
        Height="180" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock x:Name="PromptText" Grid.Row="0" Text="Bitte geben Sie einen Wert ein:" Margin="0,0,0,10"/>
        <TextBox x:Name="InputTextBox" Grid.Row="1" Padding="5"/>
        
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="OK" Width="80" Height="28" Padding="10,3" Margin="0,0,10,0" Click="OkButton_Click" IsDefault="True"/>
            <Button Content="Abbrechen" Width="90" Height="28" Padding="10,3" Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
